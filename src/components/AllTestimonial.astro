---
import Button from "./Button.astro";
const { data } = Astro.props;

function getFirstNChars(str, length) {
  return str.substring(0, length);
}
---

<section id="card">
  <h3>{getFirstNChars(data.title, 30)}</h3>

  <p>
    {data.description}
  </p>
  <p class="name">{"-" + " " + data.name}</p>
</section>
<style>
  h3 {
    text-align: center;
    margin-bottom: 1rem;
  }
  #card {
    display: flex;
    padding: 2rem;
    text-align: center;
    background-color: #fffbfb;
    margin-top: 2rem;
    flex-direction: column;
  }

  p {
    font-family: serif;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  .name {
    font-size: 0.9rem;
    font-weight: 600;
    text-align: right;
    margin-top: 1.5rem;
  }
  .button {
    margin-top: 3rem;
  }
  @media (min-width: 700px) {
    .button {
      grid-column: 2/3;
      margin-top: 2rem;
    }
  }
</style>
