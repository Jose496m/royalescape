---
import Testimonials from "./Testimonials.astro";
---

<h2>DET SIGER VORES KUNDER</h2>
<section>
  <Testimonials />
</section>

<style>
  section {
    margin-bottom: 2rem;
    margin-inline: 2rem;
    background-color: #352b2d;
    padding-inline: 2rem;
    padding-bottom: 2rem;
  }
  h2 {
    text-align: center;
    color: white;
    margin-top: 4rem;
    margin-bottom: 1rem;
