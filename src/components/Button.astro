---
const { link, title } = Astro.props;
---

<a href={link}><span>{title}</span></a>
<style>
  a {
    background-color: var(--button-color);
    font-family: "Cinzel", serif;
    padding: 15px 35px;
    font-size: 15px;
    border: none;
    border-radius: 25px;
    color: white;
    text-align: center;
    text-decoration: none;
    box-shadow: 1px 10px 10px rgba(0, 0, 0, 0.3);
    transition: all 200ms ease-in-out;
  }
  a:hover {
    background-color: #491d26;
  }

  .large {
  }
</style>
