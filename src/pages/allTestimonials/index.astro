---
import AllTestimonialCard from "../../components/AllTestimonialCard.astro";
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="All testimonials">
  <section>
    <AllTestimonialCard />
  </section>
</MainLayout>
<style>
  section {
    margin-bottom: 2rem;
    margin-inline: 2rem;
    background-color: #352b2d;
    padding-inline: 2rem;
    padding-bottom: 2rem;
  }
  h2 {
    text-align: center;
    color: white;
    margin-top: 4rem;
    margin-bottom: 1rem;
    font-weight: 600;
    font-size: 1.5rem;
  }

  @media (min-width: 820px) {
    section {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      background-color: #352b2d;
      justify-content: center;
      gap: 30px;
    }
    .button {
      grid-column: 2/3;
      margin-top: 2rem;
    }
  }
</style>
